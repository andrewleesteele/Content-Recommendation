<aura:component >
    <aura:attribute name="item" type="Content__c"/>
    
    <lightning:card >
    <p class="slds-text-heading--medium slds-p-horizontal--small">
    	<lightning:formattedUrl value="{!v.item.Content_Link__c}" label="{!v.item.Name}"/>
    </p>
  
    <p class="slds-p-horizontal--small slds-text-color_weak">
        <lightning:formattedText value="{!v.item.Content_Type__c}"/>
    </p>
    <p class="slds-p-horizontal--small">
        <lightning:formattedText value="{!v.item.Summary__c}"/>
    </p>
    </lightning:card>

</aura:component>